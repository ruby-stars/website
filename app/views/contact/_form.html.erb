<%= form_with model: @contact, local: true do |form| %>
  <div class="field">
    <%= form.text_field :firstName, placeholder: "Your name" %>
  </div>

  <div class="field">
    <%= form.text_field :email, placeholder: "Your email" %>
  </div>

  <div class="field">
    <%= form.text_area :message, placeholder: "Your message to us" %>
  </div>

  <div>
    <%= form.submit "Send" %>
  </div>
<% end %>
